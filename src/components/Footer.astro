---
import FooterLink from './FooterLink.astro';
import Footertop from './Footertop.astro';

const company = ['How we work', 'Why Insure?', 'View plans', 'Reviews'];
const help = ['FAQ', 'Terms of use', 'Privacy policy', 'Cookies'];
const contact = ['Sales', 'Support', 'Live chat'];
const other = ['Careers', 'Press', 'Licenses'];
---

<footer>
    <Footertop />
    <div class="container">
        <hr />
    </div>

    <div class="grid container">
        <FooterLink title="our company" links={company} />
        <FooterLink title="help me" links={help} />
        <FooterLink title="contact" links={contact} />
        <FooterLink title="other" links={other} />
    </div>
</footer>

<style>
    footer {
        background-color: var(--very-light-gray);
        padding-bottom: 3rem;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));
        gap: 2rem;
        text-align: center;
        margin-block: 3rem;
    }

    hr {
        border: 0;
        border-bottom: 1px solid var(--dard-violet);
        opacity: 0.2;
        margin-top: 1.4rem;
    }

    @media (min-width: 660px) {
        footer {
            background: url('../assets/bg-pattern-footer-desktop.svg');
            background-repeat: no-repeat;
            background-position: top left;
            background-color: var(--very-light-gray);
        }
    }
</style>
